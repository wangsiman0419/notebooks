/**index.wxss**/
.container{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
}
.item{
    width: 200rpx;
    display: flex;
    flex-direction: column;
    padding-bottom: 20rpx;
}
.container image{
    width: 200rpx;
    height: 200rpx;
}
.container text{
    width: 200rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-size: 30rpx;
}
.container-albums{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
}
.items{
    width: 200rpx;
    display: flex;
    flex-direction: column;
    padding-bottom: 20rpx;
}
.container-albums image{
    width: 200rpx;
    height: 200rpx;
}