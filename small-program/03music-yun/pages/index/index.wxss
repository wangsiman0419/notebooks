.form{
  display: flex;
  padding: 10px 20px;
  background: black;
}
input{
  height: 100rpx;
}
.search-wrap{
    border: 1px solid #333;
    border-radius: 40rpx;
    flex: 1;
    background: #fff;
}
button{
  width: 180rpx;
  border-radius: 40rpx;
  border: none;
  margin-left: 10px;
  font-size: 16px;
}
.search-wrap .photo{
  height: 80rpx;
  width:80rpx;
  float: left;
  margin-left: 5px;
  margin-top: 5px;
}
